block vars
    - var pageTitle

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        block fonts
            link(rel="preconnect" href="https://fonts.googleapis.com")
            link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
            link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400;700&display=swap")

        title mb: index
    body 
        #app.tertiary
            main#main
            //- В шаблонах страниц необходимы side#side и main#main
            footer#footer 
                block footer   
                    div.footer__title mb: index
                    div middle.messenger.praktikum.yandex
        block scripts 
            script(src="index.ts" type="module") 

